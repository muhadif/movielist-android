<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:padding="@dimen/padding_card"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/padding_activity">

        <ImageView
            android:id="@+id/img_poster"
            android:layout_width="@dimen/poster_width"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_activity_content"
            android:layout_marginTop="@dimen/margin_activity_content"
            android:layout_marginBottom="@dimen/margin_activity_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_movie_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/movie_title"
                android:textSize="@dimen/card_title_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_movie_overview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_card_tv"
                android:text="@string/overview_film"
                android:textSize="@dimen/size_content" />
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>